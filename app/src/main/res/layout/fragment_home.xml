<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all"
    android:orientation="vertical">

    <include layout="@layout/page_title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_home_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_id"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp45"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/edit_bg_id"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="请输入好友id"
                android:inputType="text"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:singleLine="true"
                android:textColor="@color/tc_first"
                android:textColorHint="@color/tc_secend"
                android:textSize="@dimen/sp16" />

            <Button
                android:id="@+id/btn_add_friends"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/btn_bg_addfriends"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp10"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp1"
                android:layout_weight="0.15" />

            <LinearLayout
                android:id="@+id/ll_memory_day"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_home"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/memory_day" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="纪念日"
                    android:textColor="@color/tc_first"
                    android:textSize="@dimen/sp18" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp1"
                android:layout_weight="0.15" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_chat"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/btn_bg_home"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/chat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="聊天"
                        android:textColor="@color/tc_first"
                        android:textSize="@dimen/sp18" />
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_msg_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/point_bg_message"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:visibility="gone"
                    />
            </RelativeLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp1"
                    android:layout_weight="0.15" />

                <LinearLayout
                    android:id="@+id/ll_diary"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp80"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_home"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/diary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日记"
                        android:textColor="@color/tc_first"
                        android:textSize="@dimen/sp18" />
                </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp1"
                android:layout_weight="0.15" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>