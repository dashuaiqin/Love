<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xmz="http://xmz.com"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.qin.view.BorderImageView
            android:id="@+id/biv_pic"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_loading"
            xmz:BorderColor="GRAY" />

        <ImageButton
            android:id="@+id/btn_del"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_alignRight="@id/biv_pic"
            android:layout_alignTop="@id/biv_pic"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@drawable/btn_bg_search_clear" />
    </RelativeLayout>

</LinearLayout>