<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/page_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp150"
            android:background="@drawable/avatar_background"
            android:padding="@dimen/dp10">


            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_avatar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lv_selector"
            android:padding="@dimen/dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的id"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/txt_my_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dp20"
                android:textColor="@color/tc_secend"
                android:textSize="@dimen/sp16" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="@color/bg_all" />

        <RelativeLayout
            android:id="@+id/rl_update_nickname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lv_selector"
            android:padding="@dimen/dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="昵称"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/txt_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp10"
                android:drawableRight="@drawable/right_arrow"
                android:textColor="@color/tc_secend"
                android:textSize="@dimen/sp16" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="@color/bg_all" />

        <RelativeLayout
            android:id="@+id/rl_update_sex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lv_selector"
            android:padding="@dimen/dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="性别"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/txt_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp10"
                android:drawableRight="@drawable/right_arrow"
                android:textColor="@color/tc_secend"
                android:textSize="@dimen/sp16" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="@color/bg_all" />

        <RelativeLayout
            android:id="@+id/rl_update_loc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lv_selector"
            android:padding="@dimen/dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="地区"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp10"
                android:drawableRight="@drawable/right_arrow"
                android:textColor="@color/tc_secend"
                android:textSize="@dimen/sp16" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@drawable/btn_background_logout"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18" />

</LinearLayout>