<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/page_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp10"
       >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp10"
        android:background="@drawable/btn_bg_home">
        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            android:gravity="left"
            android:hint="@string/hint_talksomeing"
            android:maxLength="800"
            android:textColor="@color/tc_first"
            android:textColorHint="@color/tc_secend"
            android:textSize="@dimen/sp18"
            android:background="@null"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_get_location"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tc_secend"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ico_location"
                    android:drawablePadding="@dimen/dp5"
                    android:text="我在..."/>
        <TextView
            android:id="@+id/txt_word_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tc_secend"
            android:text="800"/>
        </LinearLayout>

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tc_secend"
            android:layout_margin="@dimen/dp5"
            android:gravity="center"
            android:textSize="@dimen/sp14"
            android:text="最多上传9张图片"/>
    <com.qin.view.NoScrollGridView
        android:id="@+id/nsgv_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/grid_space"
        android:numColumns="4"
        android:gravity="center"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/dp5"
        android:stretchMode="columnWidth"
        >
    </com.qin.view.NoScrollGridView>
</LinearLayout>
    </ScrollView>
   </LinearLayout>