<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Scroll_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/editText_background_color" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/page_title"/>
        <LinearLayout
            android:id="@+id/scroll_updatelogin_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="#fff"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="#fff"
                android:drawableLeft="@drawable/ico_phone"
                android:drawablePadding="@dimen/dp5"
                android:drawableStart="@drawable/ico_phone"
                android:hint="输入用户名"
                android:maxLength="18"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:singleLine="true"
                android:textColor="#404040"
                android:textColorHint="@color/editText_hint_color"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginStart="@dimen/dp10"
                android:background="@color/editText_background_color" />
            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="#fff"
                android:drawableLeft="@drawable/ico_phone"
                android:drawablePadding="@dimen/dp5"
                android:drawableStart="@drawable/ico_phone"
                android:hint="请输入邮箱"
                android:maxLength="18"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:singleLine="true"
                android:textColor="#404040"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/editText_hint_color"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginStart="@dimen/dp10"
                android:background="@color/editText_background_color" />

            <EditText
                android:id="@+id/edit_pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="#fff"
                android:drawableLeft="@drawable/ico_password"
                android:drawablePadding="@dimen/dp5"
                android:drawableStart="@drawable/ico_password"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:singleLine="true"
                android:textColor="#404040"
                android:textColorHint="@color/editText_hint_color"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginStart="@dimen/dp10"
                android:background="@color/editText_background_color" />

            <EditText
                android:id="@+id/edit_pass_ag"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="#fff"
                android:drawableLeft="@drawable/ico_password"
                android:drawablePadding="@dimen/dp5"
                android:drawableStart="@drawable/ico_password"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:singleLine="true"
                android:textColor="#404040"
                android:textColorHint="@color/editText_hint_color"
                android:textSize="@dimen/sp16" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginStart="@dimen/dp10"
                android:background="@color/editText_background_color" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp20"
                android:text="@string/register"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>